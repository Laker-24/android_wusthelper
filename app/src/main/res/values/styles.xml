<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="MyTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowAnimationStyle">@style/AnimationActivity</item>
        <!--菜单栏不遮盖图标-->
        <item name="actionOverflowMenuStyle">@style/OverflowMenuStyle</item>
        <!--toolbar菜单项图标的颜色-->
        <item name="android:textColorSecondary">@android:color/white</item>
        <!--修改searchView样式-->
        <item name="searchViewStyle">@style/SearchViewStyle</item>
        <item name="listPopupWindowStyle">@style/listpopstyle</item>
    </style>

    <style name="DialogActivityTheme" parent="@android:style/Theme.DeviceDefault.Light.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/bg_card_main</item>

    </style>

    <style name="AnimationActivity" parent="@android:style/Animation.Activity">

        <item name="android:activityOpenEnterAnimation">@anim/anim_enter</item>
        <item name="android:activityOpenExitAnimation">@anim/anim_exit</item>
        <item name="android:activityCloseEnterAnimation">@anim/back_enter</item>
        <item name="android:activityCloseExitAnimation">@anim/back_exit</item>

    </style>

    <style name="ScheduleTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorControlNormal">@color/color_radio_button_default</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>

    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="searchHintIcon">@null</item>
    </style>

    <!--NavigationIcon和标题之间的距离-->
    <style name="ToolbarStyle" parent="Base.Widget.AppCompat.Toolbar">
        <item name="android:contentInsetEndWithActions" tools:ignore="NewApi">0dp</item>
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
    </style>

    <style name="TableTextGreen">
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:paddingTop">@dimen/sub_small_spacing</item>
        <item name="android:paddingBottom">@dimen/sub_small_spacing</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/theme_color</item>
    </style>

    <style name="TableTextBlack">
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:paddingTop">@dimen/sub_small_spacing</item>
        <item name="android:paddingBottom">@dimen/sub_small_spacing</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/title_text_black</item>
    </style>

    <style name="pop_add">
        <item name="android:windowEnterAnimation">@anim/pop_show</item>
        <item name="android:windowExitAnimation">@anim/pop_hide</item>
    </style>

    <style name="progressHorizontalStyle" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:maxHeight">2dp</item>
        <item name="android:minHeight">2dp</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:indeterminateDrawable">
            @android:drawable/progress_indeterminate_horizontal
        </item>
        <item name="android:progressDrawable">@drawable/progressbar_color_size</item>
    </style>

    <style name="RatingBar_CustomColor" parent="@android:style/Widget.Holo.RatingBar.Indicator">
        <!--Background Color-->
        <item name="colorControlNormal">#D7D7D7</item>
        <!--Progress Color-->
        <item name="colorControlActivated">#f7e545</item>
    </style>

    <style name="Toolbar.MyStyle" parent="Base.Widget.AppCompat.Toolbar">
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
    </style>

    <style name="MyEditText" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@android:color/white</item>
    </style>

    <style name="MyGradeEditText" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/default_bg_half</item>
        <item name="colorControlActivated">@color/default_bg_half</item>
    </style>

    <style name="custom_rating_bar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/layer_star</item>
        <item name="android:minHeight">24dp</item>
        <item name="android:maxHeight">24dp</item>
    </style>

    <style name="LibrarySearch" parent="@style/MyTheme">
    </style>

    <style name="transparent_activity" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/transparent_background</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>
    </style>

    <style name="popup_window">
        <item name="android:windowEnterAnimation">@anim/pop_show</item>
        <item name="android:windowExitAnimation">@anim/pop_hide</item>
    </style>

    <style name="DeleteRadioButton" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/color_radio_button_default</item>
        <item name="colorControlActivated">@color/color_radio_button_delete</item>
    </style>


    <style name="SelectRadioButton" parent="Theme.AppCompat.Light">

        <item name="colorControlNormal">@color/color_radio_button_default</item>
        <item name="colorControlActivated">@color/colorPrimary</item>

    </style>

    <style name="edit_activity" parent="Theme.Design.Light.NoActionBar">
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>
    </style>

    <style name="library_activity" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">false</item>
    </style>


    <style name="TextInputLayout" parent="Theme.AppCompat.Light.NoActionBar">

        <!--<item name="colorAccent">#3498db</item>-->
        <item name="android:textColorHint">@color/color_hint_control</item>
        <item name="colorControlNormal">@color/color_hint_text</item>
        <item name="colorControlActivated">@color/color_highlight</item>
        <item name="colorControlHighlight">@color/color_highlight</item>

    </style>

    <style name="TextInputLayoutNew" parent="Theme.AppCompat.Light.NoActionBar">

        <!--<item name="colorAccent">#3498db</item>-->
        <item name="colorControlNormal">@color/gray_list_divider</item>
        <item name="colorControlActivated">@color/color_blue_light </item>
        <item name="colorControlHighlight">@color/color_blue_light</item>

    </style>

    <style name="LoadingDialog" parent="android:Theme.Dialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="MyEditText.ModifyUserData" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>

    <style name="StartTheme" parent="Theme.AppCompat.NoActionBar">
        <!--        <item name="android:windowNoTitle">true</item>-->
        <!--        <item name="android:windowFullscreen">true</item>-->
        <item name="android:navigationBarColor" tools:targetApi="lollipop">@color/transparent</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@android:color/transparent</item>
        <item name="android:windowBackground">@drawable/launch</item>
    </style>

    <style name="BottomDialog.Animation" parent="Animation.AppCompat.Dialog">
        <item name="android:windowEnterAnimation">@anim/translate_dialog_in</item>
        <item name="android:windowExitAnimation">@anim/translate_dialog_out</item>
    </style>

    <style name="BottomDialog" parent="@style/Base.V7.Theme.AppCompat.Light.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
    <style name="MyCheckBox" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/scholarship_check_background
        </item>
    </style>

    <style name="CountDownCheckBox" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/countdown_check_background
        </item>
    </style>

    <style name="SelectCheckBox" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/countdown_select_check
        </item>
    </style>

    <style name="PopupAnimation" parent="android:Animation" mce_bogus="1">
        <item name="android:windowEnterAnimation">@anim/scholarship_sort_enter</item>
        <item name="android:windowExitAnimation">@anim/schoarship_sort_exit</item>
    </style>

    <style name="mViewShadow">
        <item name="cardShadowEndColor">#10E6E6E6</item>
        <item name="cardShadowStartColor">#EBEBEB</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">6dp</item>
        <item name="cardLightDirection">none</item>
    </style>
    <style name="mChangeBgShadow">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">436dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">2dp</item>
    </style>
    <style name="mViewShadow_countdown">
        <item name="cardShadowEndColor">#10DFDFDF</item>
        <item name="cardShadowStartColor">#DFDFDF</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">5dp</item>
        <item name="cardLightDirection">none</item>
    </style>
    <style name="mViewShadow_BigSize">
        <item name="cardCornerRadius">10dp</item>
        <item name="cardShadowEndColor">#10E6E6E6</item>
        <item name="cardShadowStartColor">#EBEBEB</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="cardElevation">6dp</item>
        <item name="cardLightDirection">none</item>
    </style>

    <style name="mViewShadow_SmallSize">
        <item name="android:layout_margin">0dp</item>
        <item name="cardElevation">0dp</item>
        <item name="cardLightDirection">none</item>
    </style>

    <style name="myNavigationDrawerStyle" >
        <item name="android:textSize">10dp</item>
    </style>

    <style name="loading_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="mView_introduce_textSize">12dp</style>

    <style name="mCourseTopItem">
        <item name="android:textColor">@color/color_default</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="mCourseTopItemDay">
        <item name="android:textColor">@color/color_default</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:alpha">0.8</item>
    </style>


    <style name="mToolbarTitle">
        <item name="android:textColor">@color/colorEditText</item>
    </style>
    <style name="dialog_button_text">
        <item name="android:background">@drawable/ripple_bg_light</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="mPopupWindowLay">
        <item name="android:layout_height">55dp</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="PopupMenuAnimation"
        parent="android:Animation" mce_bogus="1">
        <item name="android:windowEnterAnimation">@anim/popup_menu_enter</item>
        <item name="android:windowExitAnimation">@anim/popup_menu_exit</item>
    </style>

    <style name="mPopupWindowGradeLab">
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">160dp</item>
    </style>



    <style name="CourseDialog" parent="android:style/Theme.Dialog">
        <item name="android:background">#00000000</item>
        <item name="android:windowBackground">#ffffff</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>


    <style name="ToolbarIconStyle" parent="Base.Widget.AppCompat.Toolbar">
        <item name="android:contentInsetEndWithActions" tools:ignore="NewApi">0dp</item>
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
        <item name="android:background">@drawable/ripple_bg</item>
    </style>

    <style name="Update_ProgressBar">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="xnpb_max">100</item>
        <item name="xnpb_current">0</item>
        <item name="xnpb_unreached_color">#CCCCCC</item>
        <item name="xnpb_reached_color">@color/color_dialog_confirm</item>
        <item name="xnpb_text_size">12sp</item>
        <item name="xnpb_text_color">@color/color_dialog_confirm</item>
        <item name="xnpb_reached_bar_height">4dp</item>
        <item name="xnpb_unreached_bar_height">3dp</item>
    </style>

    <style name="MyTablayoutstyle" parent="Base.Widget.Design.TabLayout">

        <item name="tabTextColor">@color/color_default_text</item>
        <item name="tabIndicatorColor">@color/colorBlue</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabSelectedTextColor">@color/colorBlue</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/colorBlue</item>
    </style>

</resources>
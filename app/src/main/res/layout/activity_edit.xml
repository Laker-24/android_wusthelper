<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            app:contentInsetStart="0dp"
            android:layout_width="match_parent"
            android:layout_height="?android:actionBarSize">

            <include
                android:id="@+id/title_course_edit"
                layout="@layout/title_course_edit"/>

        </androidx.appcompat.widget.Toolbar>

        <View
            android:background="@color/color_class_edit_block"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>

        <View
            android:layout_marginTop="20dp"
            android:background="@color/color_class_edit_block"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>

        <LinearLayout
            android:orientation="horizontal"
            android:background="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="70dp">

            <TextView
                android:layout_gravity="center_vertical"
                android:gravity="center_horizontal"
                android:textSize="16sp"
                android:text="@string/tv_class_name"
                android:layout_weight="1.2"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <EditText
                android:textStyle="bold"
                android:textCursorDrawable="@drawable/shape_text_cursor"
                android:hint="@string/edit_hint"
                android:id="@+id/et_class_name"
                android:textColor="@color/color_class_edit_text"
                android:textSize="16sp"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_gravity="center_vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:background="@android:color/white"
                android:layout_weight="3.5"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <View
            android:background="@color/color_class_edit_divider"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>

        <LinearLayout
            android:orientation="horizontal"
            android:background="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="55dp">

            <TextView
                android:layout_gravity="center_vertical"
                android:gravity="center_horizontal"
                android:textSize="16sp"
                android:text="@string/tv_class_no"
                android:layout_weight="1.2"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <EditText
                android:textStyle="bold"
                android:textCursorDrawable="@drawable/shape_text_cursor"
                android:hint="@string/edit_hint"
                android:id="@+id/et_class_no"
                android:textColor="@color/color_class_edit_text"
                android:textSize="16sp"
                android:layout_gravity="center_vertical"
                android:background="@android:color/white"
                android:layout_weight="3.5"
                android:layout_width="0dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <View
            android:background="@color/color_class_edit_block"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>

        <View
            android:layout_marginTop="20dp"
            android:background="@color/color_class_edit_block"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>

        <LinearLayout
            android:orientation="horizontal"
            android:background="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="55dp">

            <TextView
                android:layout_gravity="center"
                android:gravity="center_horizontal"
                android:textSize="16sp"
                android:text="@string/tv_class_room"
                android:layout_weight="1.2"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <EditText
                android:textStyle="bold"
                android:hint="@string/edit_hint"
                android:textCursorDrawable="@drawable/shape_text_cursor"
                android:id="@+id/et_class_room"
                android:textColor="@color/color_class_edit_text"
                android:textSize="16sp"
                android:layout_gravity="center_vertical"
                android:background="@android:color/white"
                android:layout_weight="3.5"
                android:layout_width="0dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <View
            android:background="@color/color_class_edit_divider"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>

        <LinearLayout
            android:id="@+id/ll_edit_week"
            android:orientation="horizontal"
            android:background="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="55dp">

            <LinearLayout
                android:layout_weight="1.2"
                android:layout_width="0dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:textColor="@android:color/holo_red_light"
                    android:layout_marginRight="5dp"
                    >

                </TextView>
                <TextView
                    android:layout_gravity="center_vertical"
                    android:gravity="center_horizontal"
                    android:textSize="16sp"
                    android:text="@string/tv_class_week"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>



            <TextView
                android:textStyle="bold"
                android:hint="@string/edit_hint"
                android:id="@+id/tv_week"
                android:textColor="@color/color_class_edit_text"
                android:textSize="16sp"
                android:layout_gravity="center_vertical"
                android:background="@android:color/white"
                android:layout_weight="3.5"
                android:layout_width="0dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <View
            android:background="@color/color_class_edit_divider"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/ll_edit_weekday"
            android:orientation="horizontal"
            android:background="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="55dp">
            <LinearLayout
                android:layout_weight="1.2"
                android:layout_width="0dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:textColor="@android:color/holo_red_light"
                    android:layout_marginRight="5dp"
                    >

                </TextView>
                <TextView
                    android:layout_gravity="center_vertical"
                    android:gravity="center_horizontal"
                    android:textSize="16sp"
                    android:text="@string/tv_class_weekday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>


            <TextView
                android:textStyle="bold"
                tools:text="星期五"
                android:id="@+id/tv_weekday"
                android:textColor="@color/color_class_edit_text"
                android:textSize="16sp"
                android:layout_gravity="center_vertical"
                android:background="@android:color/white"
                android:layout_weight="3.5"
                android:layout_width="0dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <View
            android:background="@color/color_class_edit_divider"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>

        <LinearLayout
            android:id="@+id/ll_edit_class_time"
            android:orientation="horizontal"
            android:background="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="55dp">

            <LinearLayout
                android:layout_weight="1.2"
                android:layout_width="0dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:textColor="@android:color/holo_red_light"
                    android:layout_marginRight="5dp"
                    >

                </TextView>
                <TextView
                    android:layout_gravity="center_vertical"
                    android:gravity="center_horizontal"
                    android:textSize="16sp"
                    android:text="@string/tv_class_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>



            <TextView
                android:textStyle="bold"
                android:hint="@string/edit_hint"
                android:id="@+id/tv_class_time"
                android:textColor="@color/color_class_edit_text"
                android:textSize="16sp"
                android:layout_gravity="center_vertical"
                android:background="@android:color/white"
                android:layout_weight="3.5"
                android:layout_width="0dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <View
            android:background="@color/color_class_edit_divider"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>

        <LinearLayout
            android:orientation="horizontal"
            android:background="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="55dp">

            <TextView
                android:layout_gravity="center_vertical"
                android:gravity="center_horizontal"
                android:textSize="16sp"
                android:text="@string/tv_class_teacher"
                android:layout_weight="1.2"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <EditText
                android:textStyle="bold"
                android:hint="@string/edit_hint"
                android:textCursorDrawable="@drawable/shape_text_cursor"
                android:id="@+id/et_teacher"
                android:textColor="@color/color_class_edit_text"
                android:textSize="16sp"
                android:layout_gravity="center_vertical"
                android:background="@android:color/white"
                android:layout_weight="3.5"
                android:layout_width="0dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <View
            android:background="@color/color_class_edit_block"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>

    </LinearLayout>

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/rl_delete"
        android:background="@android:color/holo_red_light"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:textSize="16sp"
            android:layout_centerInParent="true"
            android:textColor="@android:color/white"
            android:text="删除"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

</RelativeLayout>

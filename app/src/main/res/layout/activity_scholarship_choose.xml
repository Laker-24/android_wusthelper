<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/scholarship_choose_toolbar"
        android:layout_width="match_parent"
        android:fitsSystemWindows="true"
        android:background="@color/colorPrimary"
        android:layout_height="wrap_content"
        app:navigationIcon="@drawable/ic_arrow_back_white_24dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:paddingRight="8dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/scholarship_semester"
                android:layout_width="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:text="@string/scholar_choose_name"
                android:padding="5dp"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/scholarship_choose_all_image"
                android:layout_width="wrap_content"
                android:layout_marginTop="1dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_centerVertical="true"
                android:src="@drawable/scholarship_choose_all_no"
                android:layout_alignParentRight="true"
                tools:ignore="RtlHardcoded" />
        </RelativeLayout>

    </androidx.appcompat.widget.Toolbar>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/scholarship_choose_recycleView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/scholarship_choose_linear"
        android:layout_below="@id/scholarship_choose_toolbar"
        android:layoutAnimation="@anim/layout_animation_fall_down" />

    <LinearLayout
        android:id="@+id/scholarship_choose_linear"
        android:layout_width="match_parent"
        android:paddingBottom="10dp"
        android:paddingTop="3dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:id="@+id/scholarship_choose_sort"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_height="match_parent"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:src="@drawable/scholarship_sort"
                android:layout_marginBottom="3dp"
                android:layout_height="wrap_content"
                />
            <TextView
                android:layout_width="match_parent"
                android:text="排序"
                android:textSize="13dp"
                android:gravity="center"
                android:layout_height="wrap_content"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/scholarship_choose_semesterChoose"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_height="match_parent"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_marginBottom="3dp"
                android:src="@drawable/scholarship_choose"
                android:layout_height="wrap_content"
                />
            <TextView
                android:layout_width="match_parent"
                android:text="选择学期"
                android:gravity="center"
                android:textSize="13dp"
                android:layout_height="wrap_content"
                />
        </LinearLayout>

        <Button
            android:id="@+id/scholarship_choose_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="9dp"
            android:layout_weight="2"
            android:background="@drawable/scholarship_choose_button_background"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="@dimen/sub_medium_text"
            android:textStyle="bold" />
    </LinearLayout>

</RelativeLayout>
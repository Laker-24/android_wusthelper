<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#fff">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ll_input"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@mipmap/logo" />
            </androidx.cardview.widget.CardView>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="武科大助手"
                    android:textColor="#484747"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="随时随地  开启校园之旅"
                    android:textColor="#979797"
                    android:textSize="14sp" />

            </LinearLayout>

        </LinearLayout>


        <com.example.wusthelper.widget.SwitchView
            android:id="@+id/switch_view"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:layout_marginTop="50dp"
            app:bgColor="@color/gray_btn_bg_color"
            app:leftColor="@color/theme_color"
            app:rightColor="@color/theme_color"
            app:setChecked="false"
            app:textLeft="本科生"
            app:textLeftClickColor="@color/white"
            app:textLeftColor="#DCF0F0F0"
            app:textRight="研究生"
            app:textRightClickColor="@color/white"
            app:textRightColor="#DCF0F0F0"
            app:time="500" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:theme="@style/TextInputLayout">

            <EditText
                android:id="@+id/et_student_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="学号"
                android:singleLine="true"
                android:textSize="16sp"
                android:theme="@style/TextInputLayout" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="25dp"
            android:theme="@style/TextInputLayout">

            <EditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/ic_baseline_visibility_off_24"
                android:hint="教务处密码"
                android:inputType="textPassword"
                android:textSize="16sp"
                android:theme="@style/TextInputLayout" />

        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>


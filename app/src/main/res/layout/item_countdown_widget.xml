<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:id="@+id/rl_countdown_all"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            >
            <TextView
                android:id="@+id/tv_countdown_className"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="计算机网络"
                android:lines="1"
                android:textSize="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="5dp"
                android:textColor="@color/colorCountDownTextTitle"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/tv_countdown_widget_date"
                android:layout_marginLeft="10dp"
                android:layout_below="@id/tv_countdown_className"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2020-10-31 18:30"
                android:textSize="15dp"
                android:textColor="@color/colorCountDownText"
                />
            <RelativeLayout
                android:id="@+id/rl_countdown_days_txt"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:layout_centerVertical="true"
                >
                <TextView
                    android:id="@+id/tv_countdown_days_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="剩余天数"
                    android:textSize="12dp"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/colorCountDownText"
                    />
                <TextView
                    android:id="@+id/tv_countdown_widget_remainedtime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_countdown_days_txt"
                    android:text="0"
                    android:textColor="@color/colorCountDownTextTitle"
                    android:textSize="25sp"
                    android:maxLines="1"
                    android:maxEms="3"
                    android:maxWidth="30dp"
                    android:layout_centerHorizontal="true"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/rl_countdown_days_txt"
                android:layout_marginRight="2dp"
                >
                <TextView
                    android:id="@+id/tv_countdown_startdays_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="开始天数"
                    android:textSize="12dp"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/colorCountDownText"
                    />
                <TextView
                    android:id="@+id/tv_countdown_widget_starttime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_countdown_startdays_txt"
                    android:layout_centerHorizontal="true"
                    android:text="0"
                    android:maxLines="1"
                    android:textColor="@color/colorCountDownTextTitle"
                    android:textSize="25sp" />
            </RelativeLayout>

        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activity.SearchCourseActivity">

    <androidx.appcompat.widget.Toolbar
        style="@style/ToolbarStyle"
        android:background="@color/colorPrimary"
        android:id="@+id/tb_change_bg"
        app:contentInsetStart="0dp"
        android:clipToPadding="true"
        android:layout_width="match_parent"
        android:layout_height="?android:actionBarSize">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?android:actionBarSize">

            <ImageView
                android:id="@+id/iv_back"
                style="@style/ToolbarIconStyle"
                android:layout_width="24dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="15dp"
                android:src="@drawable/ic_arrow_back_white_24dp" />

            <TextView
                android:id="@+id/toolbar"
                style="@style/mToolbarTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_toRightOf="@+id/iv_back"
                android:text="课程查询（蹭课）"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/iv_search"
                style="@style/ToolbarIconStyle"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:src="@drawable/ic_search_white_24dp" />



            <EditText
                android:singleLine="true"
                android:imeOptions="actionSearch"
                android:hint="查询课程或老师"
                android:id="@+id/et_search_course"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:layout_marginEnd="60dp"
                android:layout_centerInParent="true"
                android:theme="@style/MyGradeEditText"
                android:cursorVisible="true"
                android:textCursorDrawable="@null"
                android:textColorHint="@color/white"
                android:textColor="@color/white"
                android:inputType="text"
                android:lines="1"
                android:visibility="gone"/>
            <ImageView
                android:id="@+id/iv_search_cancel"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="15dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_baseline_clear_24"
                style="@style/ToolbarIconStyle"
                android:visibility="gone"
                />
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
    android:id="@+id/sr_search"
    app:srlEnableRefresh="false"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/search_course_recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    <com.scwang.smartrefresh.layout.footer.ClassicsFooter
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</com.scwang.smartrefresh.layout.SmartRefreshLayout>


</LinearLayout>
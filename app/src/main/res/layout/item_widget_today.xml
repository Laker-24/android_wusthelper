<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:orientation="vertical"
    android:id="@+id/rl_widget_today_all">

    <TextView
        android:id="@+id/tv_widget_today_startTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:lines="1"
        android:text="早上8:20"
        android:textColor="@color/black"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_widget_today_endTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_widget_today_startTime"
        android:layout_marginStart="15dp"
        android:layout_marginTop="1dp"
        android:text="早上10:00"
        android:textColor="@color/colorGray"
        android:textSize="12sp" />

    <RelativeLayout
        android:id="@+id/rl_widget_today_class_color"
        android:layout_width="5dp"
        android:layout_height="match_parent"
        android:layout_marginStart="85dp"
        android:layout_marginTop="11dp"
        android:layout_marginBottom="10dp"
        />

    <TextView
        android:id="@+id/tv_widget_today_className"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="9dp"
        android:layout_toEndOf="@+id/rl_widget_today_class_color"
        android:lines="1"
        android:text="计算机网络"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_widget_today_place_and_teacher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_widget_today_className"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="1dp"
        android:layout_toEndOf="@+id/rl_widget_today_class_color"
        android:text="教三楼105 | 王少威"
        android:textColor="@color/colorGray"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="1dp"
        android:background="@color/gray_list_divider" />

</RelativeLayout>
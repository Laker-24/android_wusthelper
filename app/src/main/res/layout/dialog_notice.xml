<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@android:color/transparent">

    <!--宽高比：1.935484-->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="30dp" />

    <!-- 370 - 147 = 223dp-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_dialog_bg_round_corners"
        android:orientation="vertical">
        <com.example.wusthelper.widget.FlexibleScrollView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_dialog_bg_round_corners"
                android:orientation="vertical">
                <TextView
                    android:layout_marginTop="10dp"
                    android:id="@+id/tv_notice_dialog_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="公告标题："
                    android:textStyle="bold"
                    android:textColor="@color/text_color"
                    android:paddingTop="@dimen/small_spacing"
                    android:gravity="center"
                    android:textSize="19dp"/>

                <TextView
                    android:id="@+id/tv_notice_dialog_content"
                    style="@style/dialog_button_text"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:lineSpacingMultiplier="1.2"
                    tools:text="@string/notice_Content"
                    android:gravity="left"
                    android:padding="@dimen/medium_spacing"
                    android:textSize="15sp"/>

            </LinearLayout>


        </com.example.wusthelper.widget.FlexibleScrollView>


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/whiteGrayFromQQ"
                android:orientation="horizontal" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/btn_notice_dialog_cancel"
                    android:layout_weight="100"
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_margin="@dimen/sub_medium_spacing"
                    android:text="@string/notice_never"
                    style="@style/dialog_button_text"
                    />
                <LinearLayout
                    android:background="@color/whiteGrayFromQQ"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="20dp"/>
                <TextView
                    android:id="@+id/btn_notice_dialog_confirm"
                    android:layout_weight="100"
                    android:layout_width="0dp"
                    android:layout_margin="@dimen/sub_medium_spacing"
                    android:textColor="@color/color_dialog_confirm"
                    android:layout_height="20dp"
                    android:text="@string/notice_get_it"
                    style="@style/dialog_button_text"/>
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>


</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/default_bg">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tb_about_us"
        app:contentInsetStart="0dp"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">
        <RelativeLayout
            android:background="@android:color/white"
            android:layout_width="match_parent"

            android:layout_height="?android:actionBarSize">
            <ImageView
                android:id="@+id/iv_back"
                android:padding="12dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_arrow_back_gray_24dp"
                android:layout_width="50dp"
                android:layout_height="50dp" />
            <TextView
                android:id="@+id/textView_toolbar_title"
                style="@style/mToolbarTitle"
                android:textSize="18sp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="物理实验系统"/>
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>

    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/white">
                <TextView
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/colorEditText"
                    android:layout_marginStart="15dp"
                    android:text="学号"
                    android:textSize="16dp" />
                <TextView
                    android:id="@+id/physicalDetailID"
                    android:layout_marginEnd="10dp"
                    android:gravity="center"
                    android:layout_alignParentEnd="true"
                    android:text="201913137713"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"/>

            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/whiteGrayFromQQ"
                android:orientation="horizontal" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/white">
                <TextView
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/colorEditText"
                    android:layout_marginStart="15dp"
                    android:text="课程数"
                    android:textSize="16dp" />
                <TextView
                    android:id="@+id/physicalDetailNumber"
                    android:layout_marginEnd="10dp"
                    android:gravity="center"
                    android:layout_alignParentEnd="true"
                    android:text="201"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/whiteGrayFromQQ"
                android:orientation="horizontal" />

<!--            <RelativeLayout-->
<!--                android:id="@+id/ll_change_background_content"-->
<!--                android:background="@color/white"-->
<!--                android:layout_marginTop="10dp"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="45dp">-->

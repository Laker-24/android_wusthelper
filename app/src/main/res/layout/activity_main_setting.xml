<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/default_bg"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tb_change_bg"
        app:contentInsetStart="0dp"
        android:layout_width="match_parent"
        android:layout_height="?android:actionBarSize">

        <RelativeLayout
            android:background="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="?android:actionBarSize">
            <ImageView
                android:id="@+id/iv_back"
                android:padding="12dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_arrow_back_gray_24dp"
                android:layout_width="50dp"
                android:layout_height="50dp" />

            <TextView
                style="@style/mToolbarTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/iv_back"
                android:text="设置"
                android:textSize="18sp" />

            />

        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:background="@color/color_background_change_white_light_246"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/setting_bar"
            android:background="@color/white"

            android:layout_marginTop="10dp"
            android:layout_width="match_parent"

            android:layout_height="45dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="15dp"
                android:text="底部导航自定义"
                android:textColor="@color/colorEditText"
                android:textSize="16dp" />

            <ImageView
                android:id="@+id/right_arrow"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:background="@drawable/right_arrow" />


        </RelativeLayout>


        <RelativeLayout
            android:visibility="gone"
            android:background="@color/white"
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="15dp"
            android:padding="5dp">

            <ImageView
                android:id="@+id/image_setting"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:background="@drawable/setting_mine" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_toRightOf="@+id/image_setting"
                android:text="主题"
                android:textColor="#C6000000"
                android:textSize="16dp" />


            <Switch
                android:id="@+id/change_homepage_switch_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:paddingLeft="10dp"
                android:paddingRight="20dp"
                android:thumb="@drawable/switch_custom_thumb_selector"
                android:track="@drawable/switch_custom_track_selector" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_refresh_widget"
            android:background="@color/white"
            android:layout_marginTop="2dp"
            android:layout_width="match_parent"

            android:layout_height="45dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="15dp"
                android:text="重置小组件"
                android:textColor="@color/colorEditText"
                android:textSize="16dp" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:background="@drawable/right_arrow" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_qr_code"
            android:background="@color/white"

            android:layout_marginTop="2dp"
            android:layout_width="match_parent"

            android:layout_height="45dp">

            <TextView
                android:textColor="#434343"
                android:layout_marginLeft="15dp"
                android:layout_centerVertical="true"
                android:textSize="16sp"
                android:text="课表二维码"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/QR_code"
                android:layout_width="23dp"
                android:layout_height="28dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_toLeftOf="@+id/qr_right_arrow"
                android:src="@drawable/qrcode" />

            <ImageView
                android:id="@+id/qr_right_arrow"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:background="@drawable/right_arrow" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/delete_qr_course"
            android:background="@color/white"
            android:layout_marginTop="2dp"
            android:layout_width="match_parent"

            android:layout_height="45dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="15dp"
                android:text="清空情侣课表"
                android:textColor="@color/colorEditText"
                android:textSize="16dp" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:background="@drawable/right_arrow" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/change_qr_course"
            android:background="@color/white"
            android:layout_marginTop="2dp"
            android:layout_width="match_parent"

            android:layout_height="45dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="15dp"
                android:text="切换情侣课表"
                android:textColor="@color/colorEditText"
                android:textSize="16dp" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:background="@drawable/right_arrow" />


        </RelativeLayout>

        <TextView
            android:paddingTop="@dimen/dp_10"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="更多功能还在开发中噢~"/>

    </LinearLayout>



</LinearLayout>
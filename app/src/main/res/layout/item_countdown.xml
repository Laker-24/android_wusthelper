<?xml version="1.0" encoding="utf-8"?>
<com.meetsl.scardview.SCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="5dp"
    android:background="@drawable/bg_countdown_new"
    style="@style/mViewShadow"
    >

    <LinearLayout
        android:id="@+id/item_countdown_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:elevation="3dp">

        <LinearLayout
            android:layout_width="15dp"
            android:layout_weight="2.6"
            android:layout_height="wrap_content"
            android:minHeight="60dp"

            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="1dp"
                android:layout_weight="1.5">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_countdown_title"
                    android:visibility="gone"
                    />

                <TextView
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp"
                    android:gravity="center_vertical"
                    android:text="课程名称"
                    android:textSize="14sp"
                    android:textColor="@color/colorCountDownText"
                    />

                <TextView
                    android:id="@+id/item_countdown_name_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="left|center_vertical"
                    android:text="计算机网络"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorCountDownTextTitle"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="5dp"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_countdown_date"
                    android:visibility="gone"
                    />

                <TextView
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp"
                    android:gravity="center_vertical"
                    android:text="考试时间"
                    android:textSize="14sp"
                    android:textColor="@color/colorCountDownText"

                    />

                <TextView
                    android:id="@+id/item_countdown_time_text"
                    android:layout_width="162dp"
                    android:layout_height="match_parent"
                    android:gravity="left"
                    android:text="2019-10-12 10:00"
                    android:textColor="@color/colorCountDownText"
                    android:textSize="12sp"

                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="1dp"
                >

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_countdown_note"
                    android:visibility="gone"
                    />

                <TextView
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="46dp"
                    android:gravity="center_vertical"
                    android:text="备注"
                    android:textSize="14sp"
                    android:textColor="@color/colorCountDownText"

                    />

                <TextView
                    android:id="@+id/item_countdown_note_text"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:lines="1"
                    android:maxEms="15"
                    android:text="认真备考，加油！认真备考，加油！"
                    android:textColor="@color/colorCountDownText"
                    android:textSize="12sp"

                    />

            </LinearLayout>

        </LinearLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="right|center_vertical"
            >


            <LinearLayout
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/item_countdown_start_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="已开始"
                    android:textSize="13sp"
                    android:textColor="@color/colorCountDownText"

                    />

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/item_countdown_days_start_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="16"
                        android:textSize="15sp"
                        android:textColor="@color/colorCountDownText"

                        />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" 天"
                        android:textSize="12sp"
                        android:textColor="@color/colorCountDownText"

                        />

                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/item_countdown_day_residue"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/item_countdown_state_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:visibility="gone"
                    android:id="@+id/item_countdown_remains_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:text="剩余天数"
                    android:textSize="13sp"
                    android:textColor="@color/colorCountDownText"
                    />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"


                    >
                    <!--                    android:layout_below="@id/text_item_remains"-->

                    <TextView
                        android:id="@+id/item_countdown_days_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginRight="2dp"
                        android:layout_toLeftOf="@id/item_countdown_days_start_text"


                        android:ellipsize="end"
                        android:maxWidth="50dp"
                        android:maxEms="4"
                        android:maxLines="1"
                        android:text="99"


                        android:textColor="@color/colorCountDownTextTitle"
                        android:textSize="30sp"

                        />

                    <TextView
                        android:id="@id/item_countdown_days_start_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@id/item_countdown_days_text"
                        android:layout_alignParentRight="true"
                        android:text="天"
                        android:textColor="@color/colorCountDownText"
                        android:textSize="14sp"

                        />
                </RelativeLayout>


            </RelativeLayout>


            <TextView
                android:visibility="gone"
                android:id="@+id/item_countdown_state_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="进行中"
                android:textColor="@color/colorCountDownText"
                android:textSize="17dp"
                android:textStyle="bold"

                />

        </RelativeLayout>

        <CheckBox
            android:id="@+id/delete_box"
            android:visibility="gone"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center"
            android:layout_width="30dp"
            android:layout_height="30dp"
            style="@style/CountDownCheckBox"
            android:checked="false"/>

    </LinearLayout>

</com.meetsl.scardview.SCardView>
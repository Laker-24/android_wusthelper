<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@android:color/transparent">

    <!--宽高比：1.935484-->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="30dp" />

    <!-- 370 - 147 = 223dp-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_dialog_bg_round_corners"
        android:orientation="vertical">
        <com.example.wusthelper.widget.FlexibleScrollView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            >
            <LinearLayout
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:background="@drawable/shape_dialog_bg_round_corners"
                android:orientation="vertical">
                <TextView
                    android:layout_marginTop="10dp"
                    android:id="@+id/tv_notice_dialog_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="错误登录提醒"
                    android:textStyle="bold"
                    android:textColor="@color/text_color"
                    android:paddingTop="@dimen/small_spacing"
                    android:gravity="center"
                    android:textSize="19dp"
                    />

                <TextView
                    android:padding="@dimen/dp_10"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center"
                    android:id="@+id/tv_notice_dialog_content"
                    style="@style/dialog_button_text"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:lineSpacingMultiplier="1.2"
                    android:text="      该账号已三次或以上登录”武科大助手“密码错误，您可以去帮助中心寻求帮助，也可联系相关管理员为您解决。"
                    android:gravity="left"

                    android:textSize="15sp"/>

            </LinearLayout>


        </com.example.wusthelper.widget.FlexibleScrollView>


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/whiteGrayFromQQ"
                android:orientation="horizontal" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/btn_error_dialog_cancel"
                    android:layout_weight="100"
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_margin="@dimen/sub_medium_spacing"
                    android:text="暂不需要"
                    style="@style/dialog_button_text"
                    />
                <LinearLayout
                    android:background="@color/whiteGrayFromQQ"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="20dp"/>

                <TextView
                    android:id="@+id/btn_error_dialog_confirm"
                    style="@style/dialog_button_text"
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_margin="@dimen/sub_medium_spacing"
                    android:layout_weight="100"
                    android:text="寻求帮助"
                    android:textColor="@color/color_dialog_confirm" />
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>


</LinearLayout>